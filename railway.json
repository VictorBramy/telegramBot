{
  "build": {
    "commands": [
      "pip install --no-cache-dir --timeout=300 -r requirements.txt"
    ]
  },
  "deploy": {
    "startCommand": "python bot.py",
    "healthcheckPath": "/",
    "restartPolicyType": "on_failure"
  },
  "environment": {
    "RAILWAY_ENVIRONMENT": "true",
    "PYTHONUNBUFFERED": "1"
  }
}